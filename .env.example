# MongoDB Configuration
MONGO_URL=mongodb://username:password@localhost:27017/?authSource=admin
MONGO_DATABASE=your_database_name
RECONNECT_INTERVAL=5000

# Collections Configuration (JSON format for multiple collections)
# Option 1: Multiple collections using JSON array
COLLECTIONS_CONFIG=[
  {
    "name": "collection_name_1",
    "webhookUrl": "http://localhost:5678/webhook/your-webhook-id",
    "operations": ["insert", "update"],
    "enabled": true
  },
  {
    "name": "collection_name_2",
    "webhookUrl": "http://localhost:5678/webhook/another-webhook-id",
    "operations": ["insert"],
    "enabled": true
  }
]

